<div class="container mt-4">
  <h1 class="text-center mb-4">
    Manage Book Genres
  </h1>
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body text-center">
          <button
            type="button"
            class="btn btn-primary rounded-pill shadow"
            data-toggle="collapse"
            data-target="#addFacultyForm"
          >
            Show/Hide Add Genre Form
          </button>
        </div>
        <div id="addFacultyForm" class="collapse">
          <div class="card-body">
            <h3 class="text-center mb-4">
              Add Genre
            </h3>
            <form id="facultyForm" action="genre" method="POST">
              <div class="form-group">
                <label for="name">
                  Name:
                </label>
                <input
                  type="text"
                  class="form-control rounded-pill shadow-sm"
                  id="name"
                  name="name"
                  maxlength="255"
                  required
                />
              </div>
              <div class="form-group">
                <label for="description">
                  Description:
                </label>
                <textarea
                  class="form-control rounded-pill shadow-sm"
                  id="description"
                  name="description"
                  rows="2"
                  required
                ></textarea>
              </div>
              <div class="text-center">
                <button
                  type="submit"
                  class="btn btn-primary rounded-pill shadow"
                >
                  Add
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>
        Book Genres
      </h2>
      <div class="table-responsive">
        <table
          class="table table-hover table-bordered text-center rounded shadow"
          style="background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(7px);"
        >
          <thead class="thead-light">
            <tr>
              <th scope="col" style="background-color: #e9ecef;">
                ID
              </th>
              <th scope="col" style="background-color: #e9ecef;">
                Name
              </th>
              <th scope="col" style="background-color: #e4e9f0;">
                Description
              </th>
              <th scope="col" style="background-color: #d8e4e8;">
                Action
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each genres}}
              <tr class="table-hover">
                <td>
                  {{this._id}}
                </td>
                <td>
                  {{this.name}}
                </td>
                <td>
                  {{this.description}}
                </td>
                <td>
                  <div class="d-flex">
                    <a
                      href="genre/edit/{{this._id}}/"
                      class="btn btn-sm btn-primary rounded-pill shadow mr-2"
                    >
                      Edit
                    </a>
                    <form
                      action="genre/delete/{{this._id}}"
                      method="POST"
                      style="display: inline;"
                    >
                      <button
                        type="submit"
                        class="btn btn-sm btn-danger rounded-pill shadow"
                      >Delete</button>
                    </form>
                  </div>
                </td>

              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- Pagination -->
<nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{#if (gt totalPages 1)}}
            {{#if (gt currentPage 1)}}
            <li class="page-item"><a class="page-link" href="?page=1">First</a></li>
            <li class="page-item"><a class="page-link" href="?page={{sub currentPage 1}}">Previous</a></li>
            {{/if}}
            {{#each pages}}
            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}"><a class="page-link"
                    href="?page={{this}}">{{this}}</a></li>
            {{/each}}
            {{#if (lt currentPage totalPages)}}
            <li class="page-item"><a class="page-link" href="?page={{add currentPage 1}}">Next</a></li>
            <li class="page-item"><a class="page-link" href="?page={{totalPages}}">Last</a></li>
            {{/if}}
            {{/if}}
        </ul>
    </nav>
<script>
  function toggleAddFacultyForm() { var form =
  document.getElementById("addFacultyForm"); if (form.style.display === "none")
  { form.style.display = "block"; } else { form.style.display = "none"; } }
</script>